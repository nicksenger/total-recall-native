{
  "main": "src/index",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "publish": "expo publish",
    "test": "npm run tslint && npm run tsc-test && npm run jest",
    "tslint": "tslint --project .",
    "tsc-test": "tsc --project .",
    "jest": "jest"
  },
  "dependencies": {
    "expo": "^34.0.4",
    "expo-av": "^6.0.0",
    "expo-file-system": "^6.0.2",
    "expo-font": "^6.0.1",
    "expo-keep-awake": "^6.0.0",
    "lodash": "^4.17.15",
    "memoize-one": "^5.0.5",
    "native-base": "^2.13.4",
    "react": "16.8.3",
    "react-native": "https://github.com/expo/react-native/archive/sdk-34.0.0.tar.gz",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-reanimated": "^1.1.0",
    "react-navigation": "^3.11.1",
    "react-redux": "^7.1.0",
    "recyclerlistview": "^1.3.4",
    "redux": "^4.0.4",
    "redux-observable": "^1.1.0",
    "rxjs": "^6.5.2",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.17",
    "@types/lodash": "^4.14.136",
    "@types/memoize-one": "^4.1.1",
    "@types/react": "^16.9.1",
    "@types/react-navigation": "^3.0.8",
    "@types/react-redux": "7.1.1",
    "@types/react-test-renderer": "^16.9.0",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "^4.1.18",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "jest-enzyme": "^7.1.0",
    "jest-expo": "^34.0.0",
    "jest-haste-map": "^24.8.1",
    "react-dom": "^16.9.0",
    "redux-logger": "^3.0.6",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1"
  },
  "private": true,
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/config-overrides/test-setup.js"
    ],
    "preset": "jest-expo",
    "transform": {
      "^.+\\.js$": "<rootDir>/config-overrides/jest.preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "modulePaths": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  }
}
